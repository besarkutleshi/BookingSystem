<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentsettings"
    android:background="@drawable/back_gradient"
    tools:context=".SettingsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="252dp"
        app:cardBackgroundColor="#d0bdf4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="328dp"
            android:layout_height="172dp"
            android:layout_gravity="center"
            android:layout_marginTop="-15sp"
            android:src="@drawable/user"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/txtemal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200sp"
            android:gravity="center"
            android:text="Email"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnMyBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_gradient"
        android:layout_marginTop="255sp"
        android:textSize="20sp"
        android:text="My Bookings"
        android:gravity="center" />

    <Button
    android:id="@+id/btnChangeMyPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_marginTop="305sp"
    android:text="Change Password"
    android:background="@drawable/back_gradient"
    android:gravity="center"/>

    <Button
        android:id="@+id/btnLogoutS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="355sp"
        android:text="Logout"
        android:background="@drawable/back_gradient"
        android:gravity="center"/>
</FrameLayout>
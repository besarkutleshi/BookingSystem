<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gradient"
    tools:context=".Account.RegisterUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/holiday" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="35dp"
            android:background="@color/manifestColor"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please fill the input below here"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorBlack"/>

        <EditText
            android:id="@+id/txtusernameR"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textbox_back"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:hint="USER NAME"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:textColorHint="@color/colorBlack"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/txtpasswordR"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textbox_back"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:textColorHint="@color/colorBlack"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/txtconfirmpasswordR"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textbox_back"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="CONFIRM PASSWORD"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:textColorHint="@color/colorBlack"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnRegisterUser"
            android:layout_width="251dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/loginbutton_back"
            android:text="Register"
            android:textColor="#000"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="Login"
            android:textColor="@color/colorBlack"
            android:background="@drawable/textbox_back"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
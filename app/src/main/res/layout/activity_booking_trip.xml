<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gradient"
    tools:context=".Booking.BookingTrip">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="395dp"
        android:layout_height="190dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="395dp"
            android:layout_height="250dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="0dp"
            android:contentDescription="@string/todo1"
            android:src="@drawable/brezo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.958"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="393dp"
        android:layout_height="323dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.269">


        <TextView
            android:id="@+id/txttitle"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:text="@string/textview"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/txtprice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="30dp"
            android:text="@string/bprice"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:layout_marginStart="320dp" />


        <TextView
            android:id="@+id/txtdescription"
            android:layout_width="240dp"
            android:layout_height="144dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="95dp"
            android:text="@string/descriptionb"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_marginStart="20dp" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="135dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/ic_favorite_black_24dp"
            android:layout_marginStart="320dp"
            android:drawableStart="@drawable/ic_favorite_black_24dp" />


        <Button
            android:id="@+id/btnBooking"
            android:layout_width="354dp"
            android:layout_height="53dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/loginbutton_back"
            android:text="@string/booking"
            android:textSize="20sp"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="45dp" />


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
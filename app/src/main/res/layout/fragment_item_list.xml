<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
            android:id="@+id/txtsearch"
            android:layout_width="250sp"
            android:layout_height="50sp"
            android:background="@drawable/textbox_back"
            android:hint="Search"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:drawableLeft="@drawable/ic_search_white_24dp"
            android:layout_marginTop="10sp"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginLeft="280sp"
            android:layout_marginTop="-60sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/loginbutton_back"
            android:drawableLeft="@drawable/ic_search_black_24dp" />


        <Button
            android:id="@+id/btnPastro"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginLeft="340sp"
            android:layout_marginTop="-60sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/loginbutton_back"
            android:drawableLeft="@drawable/ic_clear_black_24dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/recyclelist"
                android:name="com.example.bookingsystem.Fragments.ItemFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="LinearLayoutManager"
                tools:context=".Fragments.ItemFragment"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</RelativeLayout>



